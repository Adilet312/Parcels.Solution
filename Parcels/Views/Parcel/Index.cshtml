@using ShippingParcel.Models;
@using System.Collections.Generic;

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Create a Custom Postcard!</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <h1>Your parcel details</h1>
        @if (Model.Count == 0)
        {
            <p>There is no parcel.</p>
        }
        @foreach (Parcel parcels in Model)
        {
            <p>@parcels.ToString()</p>
            <p> Your shipping cost: $@parcels.CostToShip()</p>
        }
        @{
            Parcel myParcel = new Parcel();
        }
        <p>Total price: $@myParcel.TotalPrice()</p>
        <a href="/parcels/new">Add more parcel</a><br>
        <a href="/">Go Home</a>
    </body>
</html>